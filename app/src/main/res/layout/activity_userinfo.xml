<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >

                    <LinearLayout

                        android:id="@+id/user_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/profilelayout"
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            >
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/birn" />

                            <ImageView
                                android:id="@+id/profileedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:src="@drawable/ic_edit_black_24dp" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="User Name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="+9999999999"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="+9999999999"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/user_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="afgistan"
                            android:textSize="16dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/login_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="20dp">

                        <Button
                            android:id="@+id/login_btnn"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/login_btn"
                            android:text="Login"
                            android:textColor="@color/white"></Button>

                        <TextView
                            android:id="@+id/textView_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:text="OR"
                            android:textColor="@color/colorAccent" />

                        <Button
                            android:id="@+id/reg_btnn"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/login_btn"
                            android:text="Create Account"
                            android:textColor="@color/white"></Button>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc"
                   /> >
                <RelativeLayout
                    android:id="@+id/user_dil"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/dill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dil"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/dil_turk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="turkmence"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc"
                    >
                </View>

                <RelativeLayout
                    android:id="@+id/Reluser_yeri"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/yeri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yeri"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/yeri_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahal"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>
                <RelativeLayout
                    android:id="@+id/user_duzgun"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/duzgun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duzgunnnama"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:id="@+id/okap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="okap tanysh"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>
                <RelativeLayout
                    android:id="@+id/bizbarda_relative"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/bizbarda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biz barada"
                        android:layout_marginLeft="20dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_info_outline_black_24dp"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>
                <RelativeLayout
                    android:id="@+id/bizbilenhabarlash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/habarlash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biz bilen habarlash"
                        android:layout_marginLeft="20dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_email_black_24dpgffg"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>

                <RelativeLayout
                    android:id="@+id/user_market_gosh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/addshop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Magazin gos" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/ic_local_hospital_black_24dp" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>

                <RelativeLayout
                    android:id="@+id/user_usluga_add"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/addusluga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Hyzmat goş" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        app:srcCompat="@drawable/ic_local_hospital_black_24dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc"
                    android:visibility="gone"></View>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/user_follow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/follow_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following list"
                        android:layout_marginLeft="20dp"
                        />
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_power_settings_new_black_24dp"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bc">
                </View>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/user_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/user_log_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hyzmat goş"
                        android:layout_marginLeft="20dp"
                        />
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        app:srcCompat="@drawable/ic_power_settings_new_black_24dp"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>



</RelativeLayout>